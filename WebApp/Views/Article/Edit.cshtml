@model Domain.Article

@{
    ViewBag.Title = "NaN - Edit article";
}

<h2>Edit article</h2>

@using (Html.BeginForm("Edit", "Article", new {id = ViewBag.Id}, FormMethod.Post, new {enctype = "multipart/form-data"}))
{

    @Html.ValidationSummary(true)
        
    @Html.HiddenFor(model => model.Id)
            
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    
    <div class="editor-field">
        @Html.EditorFor(model => model.PublishDate)
        @Html.ValidationMessageFor(model => model.PublishDate)
    </div>
    
    <div class="editor-field">
        @Html.EditorFor(model => model.EmailAddress)
        @Html.ValidationMessageFor(model => model.EmailAddress)
    </div>
            
    <div class="editor-label">
        @Html.LabelFor(model => model.Summary)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Summary, 4, 100, null)
        @Html.ValidationMessageFor(model => model.Summary)
    </div>
            
    <div class="editor-label">
        @Html.LabelFor(model => model.Body)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Body, 30, 100, null)
        @Html.ValidationMessageFor(model => model.Body)
    </div>

    <div class="editor-label">
        Attachment:
    </div>
    <div class="editor-field">
        <input type="file" name="file" id="file" size="" />
    </div>

    <p><input type="submit" value="Save" /></p>

}

<div>
    @Html.ActionLink("Back to article list", "Index")
</div>

@section scripts {
 <script type="text/javascript" src="@Url.Content("~/Scripts/wordcountvalidator.js")"></script>
}